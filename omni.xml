<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="omni" _name="Omni" version="1.0">
    <author>Eduardo Oliveira | eduardo_y05@outlook.com</author>
    <_description>Color scheme using @Rocketseat Omni color palette</_description>
  
    <!-- Omni Colors From: https://github.com/getomni/vscode-omni -->
    <color name="OMNI_BG" value="#191622" />
    <color name="OMNI_FG" value="#E1E1E6" />
    <color name="OMNI_SELECTION" value="#41414D" />
    <color name="OMNI_COMMENT" value="#5A4B81" />
    <color name="OMNI_CYAN" value="#988bc7" />
    <color name="OMNI_GREEN" value="#67E480" />
    <color name="OMNI_ORANGE" value="#E89E64" />
    <color name="OMNI_PINK" value="#FF79C6" />
    <color name="OMNI_PURPLE" value="#78D1E1" />
    <color name="OMNI_RED" value="#E96379" />
    <color name="OMNI_YELLOW" value="#E7DE79" />

    <color name="OMNI_BGLight" value="#201B2D" />

    <!-- Global Settings -->
    <style name="text"
           foreground="OMNI_FG"
           background="OMNI_BG" />
    <style name="selection"
           background="OMNI_SELECTION" />
    <style name="cursor"
           foreground="OMNI_FG"/>
    <style name="secondary-cursor"
           foreground="OMNI_FG"/>
    <style name="current-line"
           background="OMNI_BGLight"/>
    <style name="line-numbers"
           foreground="OMNI_COMMENT"
           background="OMNI_BG" />
    <style name="background-pattern"
           background="OMNI_BG"/>

    <!-- Bracket Matching -->
    <style name="bracket-match"
           foreground="OMNI_FG"
           background="OMNI_SELECTION"/>
    <style name="bracket-mismatch"
           foreground="OMNI_RED"
           background="OMNI_SELECTION"/>

    <!-- Right Margin -->
    <style name="right-margin"
           foreground="OMNI_COMMENT"
           background="OMNI_BG"/>
    
    <!-- Search Matching -->
    <style name="search-match"
           foreground="OMNI_FG"
           background="OMNI_CYAN"/>

    <!-- Comments -->
    <style name="def:comment"
           foreground="OMNI_COMMENT"/>
    <style name="def:shebang"
           foreground="OMNI_COMMENT"
           bold="true"/>
    <style name="def:doc-comment-element"
           italic="true"/>

    <!-- Constants -->
    <style name="def:constant"
           foreground="OMNI_YELLOW"/>
    <style name="def:special-char"
           foreground="OMNI_PINK"/>
    <style name="def:number"
           foreground="OMNI_PURPLE" />

    <!-- Identifiers -->
    <style name="def:identifier"
           foreground="OMNI_PINK"/>

    <!-- Statements -->
    <style name="def:statement"
           foreground="OMNI_PINK"/>

    <!-- Types -->
    <style name="def:type"
           foreground="OMNI_GREEN"/>

    <!-- Operators -->
    <style name="def:operator"
           foreground="OMNI_PINK"/>

    <!-- Others -->
    <style name="def:preprocessor"
           foreground="OMNI_PINK"/>
    <style name="def:error"
           foreground="OMNI_RED"
           bold="true"/>
    <style name="def:note"
           foreground="OMNI_COMMENT"
           background="OMNI_FG"/>
    <style name="def:underlined"
           italic="true"
           underline="single"/>

</style-scheme>